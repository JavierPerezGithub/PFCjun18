<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.javier.starapiwars.SplashActivity">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backgroundsplash"
        app:srcCompat="@drawable/backgroundsplash" />

    <ImageView
        android:id="@+id/nave"
        android:layout_width="115dp"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:layout_toStartOf="@+id/nave2"
        app:srcCompat="@drawable/navesplash" />

    <ImageView
        android:id="@+id/logosw"
        android:layout_width="297dp"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        app:srcCompat="@drawable/swlogo" />

    <ImageView
        android:id="@+id/emuerte"
        android:layout_width="144dp"
        android:layout_height="142dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="39dp"
        app:srcCompat="@drawable/smuerte" />

    <ImageView
        android:id="@+id/navedarth"
        android:layout_width="78dp"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        app:srcCompat="@drawable/navedarth" />

    <ImageView
        android:id="@+id/nave2"
        android:layout_width="130dp"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/nave2" />

</RelativeLayout>
