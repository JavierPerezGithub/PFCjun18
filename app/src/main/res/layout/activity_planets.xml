<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopeople"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".logicPlanets.PlanetsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        app:srcCompat="@drawable/planetaplanet" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_marginTop="10dp"
        android:text="Do you know Tatooine? Surely but you do not know how many people live on this planet? If you are interested, enter now."
        android:textColor="#ffee00"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/go"
        android:onClick="contPlanet" />

</LinearLayout>