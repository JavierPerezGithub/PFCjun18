<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context="com.javier.starapiwars.logicPeople.PeopleFinalActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivPeopleFinal"
        android:layout_marginTop="20dp"
        android:layout_width="240dp"
        android:layout_height="202dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#EEE"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#999"/>

    <TextView
        android:id="@+id/tvNombrePeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvAlturaPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvPesoPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvColorOjosPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvColorPielPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvColorPeloPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvPlanetaPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvYearPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvGenderPeopleFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
