<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsplash"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".logicPlanets.PlanetFinalActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivPlanetFinal"
        android:layout_width="240dp"
        android:layout_height="202dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#EEE"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:civ_shadow_color="#999"
        app:civ_shadow_radius="10" />

    <TextView
        android:id="@+id/tvNamePlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvRotationPlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvOrbitalPlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvDiameterPlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvGravityPlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvTerrainPlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvSurfacePlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvClimatePlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />

    <TextView
        android:id="@+id/tvPopulationPlanetFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee00" />
</LinearLayout>
