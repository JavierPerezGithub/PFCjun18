<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javier.starapiwars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_web"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_web"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait" />
        <activity android:name=".logicPeople.PeopleActivity" android:screenOrientation="portrait"/>
        <activity android:name=".logicPeople.ContPeople"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity android:name=".logicPeople.PeopleFinalActivity" android:screenOrientation="portrait"/>
        <activity android:name=".logicPlanets.PlanetsActivity" android:screenOrientation="portrait" />
        <activity android:name=".logicPlanets.ContPlanet"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity android:name=".logicPlanets.PlanetFinalActivity" android:screenOrientation="portrait" />
        <activity android:name=".logicStarShips.StarshipActivity" android:screenOrientation="portrait" />
        <activity android:name=".logicStarShips.ContStarship" android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity android:name=".logicStarShips.StarshipFinalActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>